---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 获取所有文章
const allPosts = await getCollection('posts');

// 统计标签
const tagCounts = {};
allPosts.forEach(post => {
  if (post.data.tags) {
    post.data.tags.forEach(tag => {
      tagCounts[tag] = (tagCounts[tag] || 0) + 1;
    });
  }
});

// 按文章数量排序
const sortedTags = Object.entries(tagCounts)
  .sort((a, b) => b[1] - a[1]);
---

<BaseLayout title="标签 - x1ngg3 的博客" description="按标签浏览文章">
  <div class="container">
    <header class="page-header">
      <h1>所有标签</h1>
      <p>共 {sortedTags.length} 个标签</p>
    </header>

    {sortedTags.length > 0 ? (
      <div class="tags-cloud">
        {sortedTags.map(([tag, count]) => (
          <a href={`/tags/${tag}`} class="tag-item">
            <span class="tag-name">{tag}</span>
            <span class="tag-count">{count}</span>
          </a>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <p>还没有标签</p>
        <p class="hint">在文章的 Front Matter 中添加 tags 字段吧！</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--color-border);
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--color-text-secondary);
    font-size: 1rem;
  }

  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .tag-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--color-bg);
    border: 2px solid var(--color-border);
    border-radius: 24px;
    color: var(--color-text);
    transition: all 0.2s;
    font-weight: 500;
  }

  .tag-item:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--color-shadow);
  }

  .tag-name {
    font-size: 1rem;
  }

  .tag-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 24px;
    height: 24px;
    padding: 0 0.5rem;
    background: var(--color-bg-secondary);
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .tag-item:hover .tag-count {
    background: rgba(255, 255, 255, 0.2);
    color: white;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--color-bg-secondary);
    border-radius: 12px;
  }

  .empty-state p {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  .empty-state .hint {
    font-size: 0.875rem;
    margin-top: 1rem;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .tags-cloud {
      gap: 0.75rem;
    }

    .tag-item {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }
  }
</style>
