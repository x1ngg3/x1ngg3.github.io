---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  const tags = new Set();

  allPosts.forEach(post => {
    if (post.data.tags) {
      post.data.tags.forEach(tag => tags.add(tag));
    }
  });

  return Array.from(tags).map(tag => ({
    params: { tag },
    props: {
      posts: allPosts
        .filter(post => post.data.tags?.includes(tag))
        .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
    },
  }));
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout title={`标签: ${tag} - x1ngg3 的博客`} description={`浏览标签为 ${tag} 的所有文章`}>
  <div class="container">
    <header class="page-header">
      <h1>
        <a href="/tags" class="back-link">标签</a>
        <span class="separator">·</span>
        <span class="current-tag">{tag}</span>
      </h1>
      <p>共 {posts.length} 篇文章</p>
    </header>

    <div class="posts-list">
      {posts.map(post => (
        <article class="post-item card">
          <h2 class="post-title">
            <a href={`/posts/${post.slug}`}>{post.data.title}</a>
          </h2>
          <p class="post-description">{post.data.description}</p>
          <div class="post-meta">
            <time datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('zh-CN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            {post.data.tags && post.data.tags.length > 1 && (
              <div class="post-tags">
                {post.data.tags.filter(t => t !== tag).map(t => (
                  <a href={`/tags/${t}`} class="tag">{t}</a>
                ))}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--color-border);
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .back-link {
    color: var(--color-text-secondary);
    font-size: 1.5rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .separator {
    color: var(--color-border);
    font-weight: 300;
  }

  .current-tag {
    color: var(--color-primary);
  }

  .page-header p {
    color: var(--color-text-secondary);
    font-size: 1rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-item {
    transition: all 0.2s;
  }

  .post-title {
    font-size: 1.75rem;
    margin: 0 0 0.75rem;
  }

  .post-title a {
    color: var(--color-text);
  }

  .post-title a:hover {
    color: var(--color-primary);
  }

  .post-description {
    color: var(--color-text-secondary);
    margin: 0 0 1rem;
    line-height: 1.6;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 1.75rem;
      flex-direction: column;
      gap: 0.5rem;
    }

    .back-link {
      font-size: 1.25rem;
    }

    .separator {
      display: none;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
