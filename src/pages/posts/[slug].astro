---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
---

<BaseLayout title={`${post.data.title} - x1ngg3 的博客`} description={post.data.description}>
  <div class="doc-layout">
    <article class="article-container">
      <header class="article-header">
        <h1 class="article-title">{post.data.title}</h1>
        <div class="article-meta">
          <time datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('zh-CN', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span class="separator">·</span>
          <span class="author">{post.data.author}</span>
        </div>
      </header>

      <div class="article-content">
        <Content />
      </div>

      <footer class="article-footer">
        <a href="/posts" class="back-link">← 返回文章列表</a>
      </footer>
    </article>

    <!-- 右侧目录导航 -->
    {headings.length > 0 && (
      <aside class="toc-sidebar">
        <nav class="toc-nav">
          <p class="toc-title">目录</p>
          <ul class="toc-list">
            {headings.map((heading) => (
              <li class={`toc-item toc-level-${heading.depth}`}>
                <a href={`#${heading.slug}`} class="toc-link">
                  {heading.text}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </aside>
    )}
  </div>
</BaseLayout>

<style>
  /* 文档布局 - 中间内容 + 右侧目录 */
  .doc-layout {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 4rem;
    position: relative;
  }

  .article-container {
    max-width: 800px;
    margin: 0;
    padding: 2rem 0;
  }

  .article-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border-light);
  }

  .article-title {
    font-size: 2.75rem;
    margin-bottom: 1rem;
    line-height: 1.2;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-text);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
  }

  .separator {
    color: var(--color-text-tertiary);
  }

  .article-content {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--color-text);
  }

  /* 标题样式 */
  .article-content :global(h2) {
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    font-size: 1.875rem;
    font-weight: 600;
    letter-spacing: -0.015em;
    color: var(--color-text);
    scroll-margin-top: 6rem;
  }

  .article-content :global(h3) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    color: var(--color-text);
    scroll-margin-top: 6rem;
  }

  .article-content :global(h4) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    scroll-margin-top: 6rem;
  }

  /* 段落和列表 */
  .article-content :global(p) {
    margin: 1.5rem 0;
    line-height: 1.75;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.75rem;
  }

  .article-content :global(li) {
    margin: 0.75rem 0;
    line-height: 1.75;
  }

  .article-content :global(li p) {
    margin: 0.5rem 0;
  }

  /* 代码块 */
  .article-content :global(code) {
    font-size: 0.9em;
    font-family: var(--font-mono);
    background: rgba(142, 142, 147, 0.12);
    padding: 0.2em 0.4em;
    border-radius: 4px;
  }

  .article-content :global(pre) {
    margin: 2rem 0;
    padding: 1.5rem;
    font-size: 0.875rem;
    line-height: 1.6;
    border-radius: var(--border-radius-sm);
    background: #1d1d1f !important;
    overflow-x: auto;
  }

  .article-content :global(pre code) {
    background: transparent;
    padding: 0;
    font-size: inherit;
  }

  /* 引用块 */
  .article-content :global(blockquote) {
    margin: 2rem 0;
    padding: 1.25rem 1.5rem;
    border-left: 4px solid var(--color-primary);
    background: var(--color-bg-secondary);
    border-radius: 0 var(--border-radius-sm) var(--border-radius-sm) 0;
    color: var(--color-text-secondary);
  }

  .article-content :global(blockquote p) {
    margin: 0.5rem 0;
  }

  /* 图片 */
  .article-content :global(img) {
    margin: 2.5rem 0;
    border-radius: var(--border-radius-sm);
    box-shadow: var(--shadow-md);
    max-width: 100%;
    height: auto;
  }

  /* 链接 */
  .article-content :global(a) {
    color: var(--color-primary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .article-content :global(a:hover) {
    border-bottom-color: var(--color-primary);
  }

  .article-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border-light);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    color: var(--color-primary);
    font-weight: 500;
    font-size: 0.9375rem;
    transition: transform 0.2s;
  }

  .back-link:hover {
    transform: translateX(-4px);
  }

  /* 右侧目录 */
  .toc-sidebar {
    position: sticky;
    top: 6rem;
    height: fit-content;
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
    padding: 1.5rem 0;
  }

  .toc-nav {
    font-size: 0.875rem;
  }

  .toc-title {
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 1rem;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin: 0;
  }

  .toc-link {
    display: block;
    padding: 0.5rem 0;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s;
    border-left: 2px solid transparent;
    padding-left: 1rem;
    margin-left: -1rem;
  }

  .toc-link:hover {
    color: var(--color-primary);
  }

  .toc-level-2 {
    padding-left: 0;
  }

  .toc-level-3 .toc-link {
    padding-left: 2rem;
    font-size: 0.8125rem;
  }

  .toc-level-4 .toc-link {
    padding-left: 3rem;
    font-size: 0.8125rem;
    color: var(--color-text-tertiary);
  }

  /* 隐藏滚动条但保持功能 */
  .toc-sidebar::-webkit-scrollbar {
    width: 4px;
  }

  .toc-sidebar::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 2px;
  }

  .toc-sidebar::-webkit-scrollbar-track {
    background: transparent;
  }

  /* 响应式设计 */
  @media (max-width: 1200px) {
    .doc-layout {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .toc-sidebar {
      display: none;
    }

    .article-container {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .doc-layout {
      padding: 0 1rem;
    }

    .article-container {
      padding: 1rem 0;
    }

    .article-title {
      font-size: 2rem;
    }

    .article-content {
      font-size: 1rem;
    }

    .article-content :global(h2) {
      font-size: 1.5rem;
      margin-top: 2rem;
    }

    .article-content :global(h3) {
      font-size: 1.25rem;
      margin-top: 1.5rem;
    }

    .article-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .separator {
      display: none;
    }
  }
</style>
