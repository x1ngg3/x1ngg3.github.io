---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="x1ngg3 的博客 - 首页">
  <div class="home-container">
    <!-- Apple 风格全屏 Hero Section -->
    <section class="hero">
      <h1 class="hero-title">Hi, 我是 x1ngg3</h1>
      <p class="hero-subtitle">
        技术创造者 · 终身学习者
      </p>
      <p class="hero-description">
        在这里记录技术探索的点滴，分享学习与成长的故事
      </p>
      <div class="hero-actions">
        <a href="/posts" class="button button-primary">浏览文章</a>
        <a href="/thoughts" class="button button-secondary">看看说说</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  /* 全屏容器 */
  .home-container {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Apple 风格全屏 Hero - 极简纯净 */
  .hero {
    text-align: center;
    max-width: 900px;
    padding: 0 2rem;
  }

  .hero-title {
    font-size: 5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    background: linear-gradient(135deg, var(--color-text) 0%, var(--color-text-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.03em;
    line-height: 1;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-subtitle {
    font-size: 1.75rem;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    font-weight: 500;
    letter-spacing: -0.01em;
    animation: fadeInUp 0.8s ease-out 0.1s backwards;
  }

  .hero-description {
    font-size: 1.375rem;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto 3.5rem;
    line-height: 1.5;
    font-weight: 400;
    opacity: 0.88;
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  .hero-actions {
    display: flex;
    gap: 1.25rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 0.8s ease-out 0.3s backwards;
  }

  .button-primary {
    background: var(--color-primary);
    color: white;
  }

  .button-secondary {
    background: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  .button-secondary:hover {
    background: var(--color-primary);
    color: white;
  }

  /* 优雅的淡入动画 */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .home-container {
      min-height: calc(100vh - 60px);
    }

    .hero {
      padding: 0 1.5rem;
    }

    .hero-title {
      font-size: 3rem;
      margin-bottom: 1.5rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
      margin-bottom: 1rem;
    }

    .hero-description {
      font-size: 1.125rem;
      margin-bottom: 2.5rem;
    }

    .hero-actions {
      flex-direction: column;
      max-width: 280px;
      margin: 0 auto;
      gap: 1rem;
    }
  }
</style>
