---
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('posts'))
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const currentPath = Astro.url.pathname;
---

<aside class="sidebar">
  <nav class="sidebar-nav">
    <div class="sidebar-header">
      <h3 class="sidebar-title">所有文章</h3>
      <span class="post-count">{allPosts.length} 篇</span>
    </div>
    <ul class="post-list">
      {allPosts.map((post) => {
        const isActive = currentPath.includes(post.slug);
        return (
          <li>
            <a
              href={`/posts/${post.slug}`}
              class={`post-link ${isActive ? 'active' : ''}`}
            >
              <span class="post-link-title">{post.data.title}</span>
              <time class="post-link-date">
                {post.data.date.toLocaleDateString('zh-CN', {
                  year: 'numeric',
                  month: '2-digit',
                  day: '2-digit'
                })}
              </time>
            </a>
          </li>
        );
      })}
    </ul>
  </nav>
</aside>

<style>
  .sidebar {
    position: fixed;
    left: 0;
    top: 5.5rem;
    width: 280px;
    height: calc(100vh - 5.5rem);
    overflow-y: auto;
    background: #FAF9F5;
    padding: 0;
  }

  .sidebar-nav {
    padding: 1.5rem 2rem 0 max(2rem, calc((100vw - 1600px) / 2 + 2rem));
  }

  .sidebar-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .sidebar-title {
    margin: 0;
    font-size: 0.8125rem;
    font-weight: 500;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .post-count {
    font-size: 0.75rem;
    color: #9ca3af;
    font-weight: 500;
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-list li {
    margin: 0;
  }

  .post-link {
    display: block;
    padding: 0.5rem 0.75rem;
    margin: 0 -0.75rem;
    border-radius: 4px;
    text-decoration: none;
    transition: background 0.15s;
  }

  .post-link:hover {
    background: #f5f5f5;
  }

  .post-link.active {
    background: #e8e8e8;
  }

  .post-link-title {
    display: block;
    font-size: 0.875rem;
    font-weight: 400;
    color: #374151;
    margin-bottom: 0.25rem;
    line-height: 1.4;
  }

  .post-link:hover .post-link-title {
    color: #BC6C4D;
  }

  .post-link.active .post-link-title {
    color: #BC6C4D;
    font-weight: 500;
  }

  .post-link-date {
    display: block;
    font-size: 0.75rem;
    color: #9ca3af;
    font-weight: 400;
  }

  /* 滚动条样式 - 始终显示 */
  .sidebar::-webkit-scrollbar {
    width: 8px;
  }

  .sidebar::-webkit-scrollbar-track {
    background: transparent;
    border-left: 1px solid #e5e5e5;
  }

  .sidebar::-webkit-scrollbar-thumb {
    background: #c5c5c5;
    border-radius: 3px;
  }

  .sidebar::-webkit-scrollbar-thumb:hover {
    background: #a0a0a0;
  }

  /* 确保滚动条始终显示 */
  .sidebar {
    scrollbar-width: thin;
    scrollbar-color: #c5c5c5 transparent;
  }

  @media (max-width: 1200px) {
    .sidebar {
      display: none;
    }
  }
</style>
